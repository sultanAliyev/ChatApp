<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane style="-fx-background-color: #EEE489;" xmlns="http://javafx.com/javafx/8.0.241">
   <center>
      <TextFlow id="textFlow" prefHeight="600.0" prefWidth="400.0" style="-fx-background-color: #F2F2F2;" BorderPane.alignment="CENTER">
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="5.0" />
         </padding>
         <BorderPane.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </BorderPane.margin>
      </TextFlow>
   </center>
   <left>
      <VBox prefHeight="200.0">
            <Label id="ipAddress" text="Ip Address: 192.168.1.101">
               <font>
                  <Font name="System Bold" size="15.0" />
               </font>
            </Label>
            <Label id="port" text="Port: 8900">
               <font>
                  <Font name="System Bold" size="15.0" />
               </font>
            </Label>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </left>
   <bottom>
      <HBox nodeOrientation="RIGHT_TO_LEFT" prefHeight="25.0" prefWidth="200.0" spacing="10.0" BorderPane.alignment="CENTER_RIGHT">
            <Button id="sendMessage" contentDisplay="CENTER" mnemonicParsing="false" text="SEND">
               <font>
                  <Font size="14.0" />
               </font>
            </Button>
            <TextField id="message" alignment="CENTER_RIGHT" prefWidth="330.0" text="">
               <font>
                  <Font size="14.0" />
               </font>
            </TextField>
         <BorderPane.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" />
         </BorderPane.margin>
      </HBox>
   </bottom>
</BorderPane>
